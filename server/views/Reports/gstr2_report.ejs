                <script src="https://cdn.jsdelivr.net/npm/moment@2.29.4/moment.min.js"></script>
                <script src="https://code.jquery.com/ui/1.13.2/jquery-ui.js"></script>
                <script>

                    $(document).ready(function () {

                        // Hide validation messages on input
                        $('input').each(function () {
                            $(this).on('input', function () {
                                if ($(this).val() == '') {
                                    $(this).addClass('is-invalid');
                                } else {
                                    $(this).removeClass('is-invalid');
                                }
                            });
                        });


                        // Default date range is previous month
                        var today = new Date();
                        var firstDayPrevMonth = new Date(today.getFullYear(), today.getMonth() - 1, 1);
                        var lastDayPrevMonth = new Date(today.getFullYear(), today.getMonth(), 0);

                        // Formatting the dates
                        var ddFirst = String(firstDayPrevMonth.getDate()).padStart(2, '0');
                        var mmFirst = String(firstDayPrevMonth.getMonth() + 1).padStart(2, '0'); //January is 0!
                        var yyyyFirst = firstDayPrevMonth.getFullYear();
                        var formattedFirstDayPrevMonth = yyyyFirst + '-' + mmFirst + '-' + ddFirst;

                        var ddLast = String(lastDayPrevMonth.getDate()).padStart(2, '0');
                        var mmLast = String(lastDayPrevMonth.getMonth() + 1).padStart(2, '0'); //January is 0!
                        var yyyyLast = lastDayPrevMonth.getFullYear();
                        var formattedLastDayPrevMonth = yyyyLast + '-' + mmLast + '-' + ddLast;

                        // Setting the values to inputs
                        $("input[name='fromdate']").val(formattedFirstDayPrevMonth);
                        $("input[name='todate']").val(formattedLastDayPrevMonth);
                        $("#generatereport").click(function (e) {

                            e.preventDefault();
                            var isValid = true;

                            var fromDate = $("input[name='fromdate']").val();
                            var toDate = $("input[name='todate']").val();

                            if (fromDate == '') {
                                $("input[name='fromdate']").addClass('is-invalid');
                                $("input[name='fromdate']").focus();
                                isValid = false;
                            } else {
                                $("input[name='fromdate']").removeClass('is-invalid');
                            }

                            if (toDate == '') {
                                $("input[name='todate']").addClass('is-invalid');
                                $("input[name='todate']").focus();
                                isValid = false;
                            } else {
                                $("input[name='todate']").removeClass('is-invalid');
                            }

                            if (fromDate > toDate) {
                                $("input[name='fromdate']").addClass('is-invalid');
                                $("input[name='todate']").addClass('is-invalid');
                                $("input[name='todate']").focus();
                                isValid = false;
                            } else {
                                $("input[name='fromdate']").removeClass('is-invalid');
                                $("input[name='todate']").removeClass('is-invalid');
                            }

                            if (isValid) {

                                // Show loader
                                $('#loader').show();

                                $.ajax({
                                    url: '/api/v2/reports/gstr2',
                                    type: 'POST',
                                    data: JSON.stringify({
                                        orgId: "<%=orgId%>",
                                        startDate: fromDate,
                                        endDate: toDate
                                    }),
                                    contentType: 'application/json',
                                    success: function (response) {
                                        data = response.data;
                                        $('#loader').hide();

                                        // Clear the table body
                                        $('#reportcart').empty();

                                        var excelLink = "/api/v2/download/gstr2/excel?orgId=<%=orgId%>&startDate=" + fromDate + "&endDate=" + toDate;

                                        // Update download options with dynamic links
                                        $("#downloadOptions").html(`
                                            <li><a class="dropdown-item" href="${excelLink}" download="GSTR1_Report_Excel.zip">Excel</a></li>
                                        `);

                                        // Show the download button
                                        $("#downloadSection").show();


                                        // Populate the table with the fetched data
                                        $('#reportcart').append(`
                                        <tr>
                                            <td>1</td>
                                            <td class="fw-bold">B2B Invoices - 3, 4A</td>
                                            <td class="text-end">${data.inwardB2B.total_voucher_count}</td>
                                            <td class="text-end">${parseFloat(data.inwardB2B.total_taxable_value).toLocaleString('en-IN')}</td>
                                            <td class="text-end">${parseFloat(data.inwardB2B.total_igst_value).toLocaleString('en-IN')}</td>
                                            <td class="text-end">${parseFloat(data.inwardB2B.total_cgst_value).toLocaleString('en-IN')}</td>
                                            <td class="text-end">${parseFloat(data.inwardB2B.total_sgst_value).toLocaleString('en-IN')}</td>
                                            <td class="text-end">${parseFloat(data.inwardB2B.total_cess_value).toLocaleString('en-IN')}</td>
                                        </tr>
                                        <tr>
                                            <td>2</td>
                                            <td class="fw-bold">Credit/Debit Notes Regular - 6C</td>
                                            <td class="text-end">${data.inwardCDNR.total_voucher_count}</td>
                                            <td class="text-end">${parseFloat(data.inwardCDNR.total_taxable_value).toLocaleString('en-IN')}</td>
                                            <td class="text-end">${parseFloat(data.inwardCDNR.total_igst_value).toLocaleString('en-IN')}</td>
                                            <td class="text-end">${parseFloat(data.inwardCDNR.total_cgst_value).toLocaleString('en-IN')}</td>
                                            <td class="text-end">${parseFloat(data.inwardCDNR.total_sgst_value).toLocaleString('en-IN')}</td>
                                            <td class="text-end">${parseFloat(data.inwardCDNR.total_cess_value).toLocaleString('en-IN')}</td>
                                        </tr>
                                        <tr>
                                            <td>3</td>
                                            <td class="fw-bold">Import of Services - 4C</td>
                                            <td class="text-end">${data.importServices.total_voucher_count}</td>
                                            <td class="text-end">${parseFloat(data.importServices.total_taxable_value).toLocaleString('en-IN')}</td>
                                            <td class="text-end">${parseFloat(data.importServices.total_igst_value).toLocaleString('en-IN')}</td>
                                            <td class="text-end">${parseFloat(data.importServices.total_cgst_value).toLocaleString('en-IN')}</td>
                                            <td class="text-end">${parseFloat(data.importServices.total_sgst_value).toLocaleString('en-IN')}</td>
                                            <td class="text-end">${parseFloat(data.importServices.total_cess_value).toLocaleString('en-IN')}</td>
                                        </tr>
                                        <tr>
                                            <td>4</td>
                                            <td class="fw-bold">Import of Goods - 5</td>
                                            <td class="text-end">${data.importGoods.total_voucher_count}</td>
                                            <td class="text-end">${parseFloat(data.importGoods.total_taxable_value).toLocaleString('en-IN')}</td>
                                            <td class="text-end">${parseFloat(data.importGoods.total_igst_value).toLocaleString('en-IN')}</td>
                                            <td class="text-end">${parseFloat(data.importGoods.total_cgst_value).toLocaleString('en-IN')}</td>
                                            <td class="text-end">${parseFloat(data.importGoods.total_sgst_value).toLocaleString('en-IN')}</td>
                                            <td class="text-end">${parseFloat(data.importGoods.total_cess_value).toLocaleString('en-IN')}</td>
                                        </tr>
                                        <tr>
                                            <td>5</td>
                                            <td class="fw-bold">Credit/Debit Notes Unregistered - 6C</td>
                                            <td class="text-end">${data.inwardCDNUR.total_voucher_count}</td>
                                            <td class="text-end">${parseFloat(data.inwardCDNUR.total_taxable_value).toLocaleString('en-IN')}</td>
                                            <td class="text-end">${parseFloat(data.inwardCDNUR.total_igst_value).toLocaleString('en-IN')}</td>
                                            <td class="text-end">${parseFloat(data.inwardCDNUR.total_cgst_value).toLocaleString('en-IN')}</td>
                                            <td class="text-end">${parseFloat(data.inwardCDNUR.total_sgst_value).toLocaleString('en-IN')}</td>
                                            <td class="text-end">${parseFloat(data.inwardCDNUR.total_cess_value).toLocaleString('en-IN')}</td>
                                        </tr>
                                        <tr>
                                            <td>6</td>
                                            <td class="fw-bold">Nil Rated Invoices - 7 (Summary)</td>
                                            <td class="text-end">${data.inwardNilExemp.total_voucher_count}</td>
                                            <td class="text-end">${parseFloat(data.inwardNilExemp.total_taxable_value).toLocaleString('en-IN')}</td>
                                            <td class="text-end">${parseFloat(data.inwardNilExemp.total_igst_value).toLocaleString('en-IN')}</td>
                                            <td class="text-end">${parseFloat(data.inwardNilExemp.total_cgst_value).toLocaleString('en-IN')}</td>
                                            <td class="text-end">${parseFloat(data.inwardNilExemp.total_sgst_value).toLocaleString('en-IN')}</td>
                                            <td class="text-end">${parseFloat(data.inwardNilExemp.total_cess_value).toLocaleString('en-IN')}</td>
                                        </tr>
                                    `);
                                    },
                                    error: function (error) {
                                        $('#loader').hide();
                                        console.log('Error fetching data', error);
                                    }
                                });

                            }
                        })
                    })
                </script>


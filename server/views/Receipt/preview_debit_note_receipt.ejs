            <script>
                $(document).ready(function () {
                    var id = '<%=id%>';

                    $.get(`/api/v2/debitNoteReceipt/${id}`, function (result, status) {
                        console.log(result.data)
                        const orgDetails = result.data.orgDetails;
                        const vendorDetails = result.data.vendorDetails;
                        const debitNoteDetails = result.data.debitNoteDetails;
                        const items = result.data.debitNoteItems;
                        const gstBreakup = result.data.gstBreakup;


                        $(".orgname").text(orgDetails.org_name);

                        $(".orgaddress").html(`
                        ${orgDetails.org_address}</br>
                        ${orgDetails.org_city} (${orgDetails.org_state}), ${orgDetails.org_pincode}</br>
                        ${orgDetails.org_telephone}`)

                        $(".gstin").text(`GSTIN : ${orgDetails.org_gstin ? orgDetails.org_gstin : 'NA'}`);
                        $(".dlno1").text(`DL No 1: ${orgDetails.org_dl_no_1 ? orgDetails.org_dl_no_1 : 'NA'}`);
                        $(".dlno2").text(`DL No 2: ${orgDetails.org_dl_no_2 ? orgDetails.org_dl_no_2 : 'NA'}`)
                        $(".flno").text(`FSSAI : ${orgDetails.org_fssai_no ? orgDetails.org_fssai_no : 'NA'}`);


                        // Check if receipt is cancelled
                        if (debitNoteDetails.debit_status === "cancelled") {
                            $(".watermark, .watermark-receipt").text("CANCELLED").show();
                            $("#cancelReceipt").hide();
                        }

                        var options = { year: 'numeric', month: 'long', day: 'numeric' };
                        var invoiceDate = new Date(debitNoteDetails.created_date);
                        var formattedDate = invoiceDate.toLocaleDateString('en-US', options);
                        $(".orderdate").text(`Invoice Date: ${formattedDate}`);

                        $(".drno").html(`Debit No:<br>${id}`)


                        $(".vendorname").text(`Name: ${vendorDetails.vendor_name ? vendorDetails.vendor_name : 'NA'}`)
                        $(".vendormobile").text(`Mobile: ${vendorDetails.vendor_contact ? vendorDetails.vendor_contact : 'NA'}`)
                        $(".vendoremail").text(`Email: ${vendorDetails.vendor_email ? vendorDetails.vendor_email : 'NA'}`)
                        $(".vendoradd").text(`Address: ${vendorDetails.vendor_address ? vendorDetails.vendor_address : 'NA'}`)
                        $(".vendorgst").text(`GSTIN: ${vendorDetails.vendor_gstin ? vendorDetails.vendor_gstin : 'NA'}`)
                        $(".vendordl1").text(`DL 1: ${vendorDetails.vendor_dl_no_1 ? vendorDetails.vendor_dl_no_1 : 'NA'}`)
                        $(".vendordl2").text(`DL 2: ${vendorDetails.vendor_dl_no_2 ? vendorDetails.vendor_dl_no_2 : 'NA'}`)
                        $(".vendorFssai").text(`FSSAI: ${vendorDetails.vendor_fssai ? vendorDetails.vendor_fssai : 'NA'}`)

                        for (var i = 0; i < items.length; i++) {
                            $("#NumberOfItems").text(`No of Items: ${items.length}`);

                            var datetime = items[i].exp_date;
                            var expDate = moment(datetime).format('MM/YYYY');

                            var grossValue = items[i].pri_unit_debit * items[i].purchase_rate + (items[i].purchase_rate / items[i].conversion) * items[i].sec_unit_debit;

                            cartHtml = `
                                    <tr>
                                        <td style="width: 2.27rem; height: 1rem;">${i + 1}</td>
                                        <td style="width: 11.29rem; height: 1rem;">${items[i].med_name}</td>
                                        <td style="width: 4.4rem; height: 1rem;">${items[i].batch_name}</td>
                                        <td style="width: 4.59rem; height: 1rem;">${items[i].hsn}</td>
                                        <td style="width: 3.61rem; height: 1rem;">${items[i].gst}</td>
                                        <td style="width: 3.25rem; height: 1rem;">${expDate}</td>
                                        <td style="width: 3.62rem; height: 1rem;">${(items[i].mrp).toFixed(2)}</td>
                                        <td style="width: 3.1rem; height: 1rem;">${items[i].pri_unit_debit}:${items[i].sec_unit_debit}</td>
                                        <td style="width: 3.62rem; height: 1rem;">${(items[i].purchase_rate).toFixed(2)}</td>
                                        <td style="width: 3.61rem; height: 1rem;">${grossValue.toFixed(2)}</td>
                                    </tr>`
                            $(".cartitems").append(cartHtml);

                        }

                        $(".totalGross").text((result.data.totalGross).toFixed(2));
                        $(".lessDiscount").text((debitNoteDetails.less_discount).toFixed(2));
                        $(".totaldebit").text((result.data.totalAmount).toFixed(2));


                        // Display totals
                        for (var gstRate in gstBreakup) {
                            $('.taxAmt' + gstRate).text((gstBreakup[gstRate].taxAmt).toFixed(2));
                            $('.cgst-' + gstRate).text((gstBreakup[gstRate].cgst).toFixed(2));
                            $('.sgst-' + gstRate).text((gstBreakup[gstRate].sgst).toFixed(2));
                            $('.totalGst' + gstRate).text((gstBreakup[gstRate].totalGst).toFixed(2));
                        }

                        // Display grand totals
                        $('.taxAmtTotal').text((gstBreakup.grandTotal.taxAmt).toFixed(2));
                        $('.cgstTotal, .cgst').text((gstBreakup.grandTotal.cgst).toFixed(2));
                        $('.sgstTotal, .sgst').text((gstBreakup.grandTotal.sgst).toFixed(2));
                        $('.totalGst').text((gstBreakup.grandTotal.totalGst).toFixed(2));

                    });



                    $('#downloadButton').click(function () {
                        $.ajax({
                            url: `/api/v2/debitNoteReceipt/${id}/pdf`,
                            method: 'GET',
                            xhrFields: {
                                responseType: 'blob' // Important for binary data
                            },
                            success: function (data) {
                                var blob = new Blob([data], { type: 'application/pdf' });
                                var link = document.createElement('a');
                                link.href = window.URL.createObjectURL(blob);
                                link.download = 'debit_note-receipt.pdf';
                                document.body.appendChild(link);
                                link.click();
                                document.body.removeChild(link);
                            },
                            error: function (err) {
                                console.error('Error downloading the receipt:', err);
                            }
                        });
                    });

                    $('#printButton').click(function () {
                        $.ajax({
                            url: `/api/v2/debitNoteReceipt/${id}/pdf`,
                            method: 'GET',
                            xhrFields: {
                                responseType: 'blob' // Important for binary data
                            },
                            success: function (data) {
                                var blob = new Blob([data], { type: 'application/pdf' });
                                var url = window.URL.createObjectURL(blob);
                                var printWindow = window.open(url, '_blank', 'width=800,height=600');
                                printWindow.onload = function () {
                                    printWindow.print();
                                }
                            },
                            error: function (err) {
                                console.error('Error downloading the receipt:', err);
                            }
                        });
                    });

                    $('#cancelReceipt').on('click', function (e) {
                        e.preventDefault(); // Prevent the default action
                        Swal.fire({
                            title: 'Are you sure?',
                            text: "You won't be able to revert this!",
                            icon: 'warning',
                            showCancelButton: true,
                            confirmButtonColor: '#3085d6',
                            cancelButtonColor: '#d33',
                            confirmButtonText: 'Yes, cancel it!'
                        }).then((result) => {
                            if (result.isConfirmed) {
                                // Perform the cancellation action here
                                $.get(`/api/cancelDebitNote?debitInvoiceId=${id}&orgId=<%=orgId%>`, function (data) {
                                    if (data.success == 1) {
                                        $.get(`/api/updatebatchoncanceldrn?debitInvoiceId=${id}`, function (updateData) {
                                            if (updateData.success == 1) {
                                                Swal.fire(
                                                    'Cancelled!',
                                                    'The receipt has been cancelled.',
                                                    'success'
                                                ).then(() => {
                                                    location.reload();
                                                })
                                            } else {
                                                Swal.fire(
                                                    'batch Error!',
                                                    'There was an error cancelling the receipt.',
                                                    'error'
                                                )
                                            }
                                        });
                                    } else {
                                        Swal.fire(
                                            'Error!',
                                            'There was an error cancelling the receipt.',
                                            'error'
                                        )
                                    }
                                })
                            }
                        })
                    });
                })
            </script>


            <script>
                function CreatePDFfromHTML() {
                    $("#html-content").show();
                    var HTML_Width = $("#html-content").width();
                    var HTML_Height = $("#html-content").height();
                    var top_left_margin = 15;
                    var PDF_Width = HTML_Width + (top_left_margin * 2);
                    var PDF_Height = (PDF_Width * 1.5) + (top_left_margin * 2);
                    var canvas_image_width = HTML_Width;
                    var canvas_image_height = HTML_Height;

                    var totalPDFPages = Math.ceil(HTML_Height / PDF_Height) - 1;

                    html2canvas($("#html-content")[0]).then(function (canvas) {
                        var imgData = canvas.toDataURL("image/jpeg", 1.0);
                        var pdf = new jsPDF('p', 'pt', [PDF_Width, PDF_Height]);
                        pdf.addImage(imgData, 'JPG', top_left_margin, top_left_margin, canvas_image_width, canvas_image_height);
                        for (var i = 1; i <= totalPDFPages; i++) {
                            pdf.addPage(PDF_Width, PDF_Height);
                            pdf.addImage(imgData, 'JPG', top_left_margin, -(PDF_Height * i) + (top_left_margin * 4), canvas_image_width, canvas_image_height);
                        }
                        pdf.save("invoice.pdf");
                        $("#html-content").hide();
                    });
                }
            </script>


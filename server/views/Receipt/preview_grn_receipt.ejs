            <script>
                $(document).ready(function () {
                    var id = '<%=id%>';

                    $.get(`/api/v2/grnReceipt/${id}`, function (result, status) {
                        console.log(result.data)
                        const orgDetails = result.data.orgDetails;
                        const vendorDetails = result.data.vendorDetails;
                        const grnDetails = result.data.grnDetails;
                        const items = result.data.grnCartItems;
                        const gstBreakup = result.data.gstBreakup;


                        $(".orgname").text(orgDetails.org_name);

                        $(".orgaddress").html(`
                        ${orgDetails.org_address}</br>
                        ${orgDetails.org_city} (${orgDetails.org_state}), ${orgDetails.org_pincode}</br>
                        ${orgDetails.org_telephone}`)

                        $(".gstin").text(`GSTIN : ${orgDetails.org_gstin ? orgDetails.org_gstin : 'NA'}`);
                        $(".dlno1").text(`DL No 1: ${orgDetails.org_dl_no_1 ? orgDetails.org_dl_no_1 : 'NA'}`);
                        $(".dlno2").text(`DL No 2: ${orgDetails.org_dl_no_2 ? orgDetails.org_dl_no_2 : 'NA'}`)
                        $(".flno").text(`FSSAI : ${orgDetails.org_fssai_no ? orgDetails.org_fssai_no : 'NA'}`);


                        // Check if receipt is cancelled
                        if (grnDetails.status === "cancelled") {
                            $(".watermark, .watermark-receipt").text("CANCELLED").show();
                            $("#cancelReceipt").hide();
                        }

                        var options = { year: 'numeric', month: 'long', day: 'numeric' };
                        var invoiceDate = new Date(grnDetails.invoice_date);
                        var formattedDate = invoiceDate.toLocaleDateString('en-US', options);
                        $(".orderdate").text(`Invoice Date: ${formattedDate}`);

                        $(".paymentMethod").text(`Payment Mode: ${grnDetails.payment_method ? grnDetails.payment_method : 'NA'}`);
                        $(".invoiceno").text(`Invoice No: ${grnDetails.vendor_invoice ? grnDetails.vendor_invoice : 'NA'}`);
                        $(".grnno").text(`GRN No:${id}`)


                        $(".vendorname").text(`Name: ${vendorDetails.vendor_name ? vendorDetails.vendor_name : 'NA'}`)
                        $(".vendormobile").text(`Mobile: ${vendorDetails.vendor_contact ? vendorDetails.vendor_contact : 'NA'}`)
                        $(".vendoremail").text(`Email: ${vendorDetails.vendor_email ? vendorDetails.vendor_email : 'NA'}`)
                        $(".vendoradd").text(`Address: ${vendorDetails.vendor_address ? vendorDetails.vendor_address : 'NA'}`)
                        $(".vendorgst").text(`GSTIN: ${vendorDetails.vendor_gstin ? vendorDetails.vendor_gstin : 'NA'}`)
                        $(".vendordl1").text(`DL 1: ${vendorDetails.vendor_dl_no_1 ? vendorDetails.vendor_dl_no_1 : 'NA'}`)
                        $(".vendordl2").text(`DL 2: ${vendorDetails.vendor_dl_no_2 ? vendorDetails.vendor_dl_no_2 : 'NA'}`)
                        $(".vendorFssai").text(`FSSAI: ${vendorDetails.vendor_fssai ? vendorDetails.vendor_fssai : 'NA'}`)

                        for (var i = 0; i < items.length; i++) {
                            $("#NumberOfItems").text(`No of Items: ${items.length}`);

                            var datetime = items[i].exp_Date;
                            var expDate = moment(datetime).format('MM/YYYY');

                            var grossValue = (items[i].qty - items[i].free) * items[i].purchase * (1 - items[i].bulk_discount / 100);

                            cartHtml = `
                                    <tr>
                                        <td style="width: 2.27rem; height: 1rem;">${i + 1}</td>
                                        <td style="width: 11.29rem; height: 1rem;">${items[i].med_name}</td>
                                        <td style="width: 4.4rem; height: 1rem;">${items[i].batch_name}</td>
                                        <td style="width: 4.59rem; height: 1rem;">${items[i].hsn}</td>
                                        <td style="width: 3.61rem; height: 1rem;">${items[i].gst}</td>
                                        <td style="width: 3.25rem; height: 1rem;">${expDate}</td>
                                        <td style="width: 3.62rem; height: 1rem;">${items[i].mrp}</td>
                                        <td style="width: 3.1rem; height: 1rem;">${items[i].qty - items[i].free}</td>
                                        <td style="width: 3.1rem; height: 1rem;">${items[i].free}</td>
                                        <td style="width: 3.62rem; height: 1rem;">${items[i].purchase}</td>
                                        <td style="width: 3.61rem; height: 1rem;">${items[i].bulk_discount}</td>
                                        <td style="width: 3.61rem; height: 1rem;">${grossValue.toFixed(2)}</td>
                                    </tr>`

                            $(".cartitems").append(cartHtml);

                        }

                        $(".totalGross").text((result.data.totalGross).toFixed(2));
                        $(".lessDiscount").text((grnDetails.less_discount).toFixed(2));
                        $(".credit_debit").text((grnDetails.credit_debit).toFixed(2));
                        $(".totalamount").text((result.data.totalAmount).toFixed(2));


                        // Display totals
                        for (var gstRate in gstBreakup) {
                            $('.taxAmt' + gstRate).text((gstBreakup[gstRate].taxAmt).toFixed(2));
                            $('.cgst-' + gstRate).text((gstBreakup[gstRate].cgst).toFixed(2));
                            $('.sgst-' + gstRate).text((gstBreakup[gstRate].sgst).toFixed(2));
                            $('.totalGst' + gstRate).text((gstBreakup[gstRate].totalGst).toFixed(2));
                        }

                        // Display grand totals
                        $('.taxAmtTotal').text((gstBreakup.grandTotal.taxAmt).toFixed(2));
                        $('.cgstTotal, .cgst').text((gstBreakup.grandTotal.cgst).toFixed(2));
                        $('.sgstTotal, .sgst').text((gstBreakup.grandTotal.sgst).toFixed(2));
                        $('.totalGst').text((gstBreakup.grandTotal.totalGst).toFixed(2));

                    });


                    $('#downloadButton').click(function () {
                        $.ajax({
                            url: `/api/v2/grnReceipt/${id}/pdf`,
                            method: 'GET',
                            xhrFields: {
                                responseType: 'blob' // Important for binary data
                            },
                            success: function (data) {
                                var blob = new Blob([data], { type: 'application/pdf' });
                                var link = document.createElement('a');
                                link.href = window.URL.createObjectURL(blob);
                                link.download = 'return-receipt.pdf';
                                document.body.appendChild(link);
                                link.click();
                                document.body.removeChild(link);
                            },
                            error: function (err) {
                                console.error('Error downloading the receipt:', err);
                            }
                        });
                    });

                    $('#printButton').click(function () {
                        $.ajax({
                            url: `/api/v2/grnReceipt/${id}/pdf`,
                            method: 'GET',
                            xhrFields: {

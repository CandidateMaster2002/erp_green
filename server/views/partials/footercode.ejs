<!-- Shortcut keys -->
<script>
  $(document).ready(function () {
    $(document).on('keydown', function (e) {
      if (e.altKey) {
        switch (e.key.toUpperCase()) {
          case 'N':
            // Navigate to the sale invoice page
            window.location.href = '/sale_invoice';
            break;
          case 'M':
            // Navigate to the sale sale invoice report page
            window.location.href = '/sale_entry_report';
            break;
          case 'P':
            // Navigate to the purchase bill page
            window.location.href = '/grn';
            break;
          case 'I':
            // Navigate to the inventory page
            window.location.href = '/product_stock';
            break;
          case 'L':
            // Navigate to the general ledger list page
            window.location.href = '/general_ledger';
            break;
          case 'U':
            // Navigate to the GRN report page
            window.location.href = '/grn_report';
            break;
          case 'D':
            // Navigate to the dashboard page
            window.location.href = '/';
            break;
          case 'C':
            // Navigate to the partwise in/out page
            window.location.href = '/partywise_in_out';
            break;
          case 'G':
            // Navigate to GSTR-1 page
            window.location.href = '/gst/gstr1';
            break;
          case 'H':
            // Navigate to GSTR-2 page
            window.location.href = '/gst/gstr2';
            break;
            case 'A':
            // Navigate to the re-order page
            window.location.href = '/substitute_meds';
            break;
        }
      } else if (e.ctrlKey) {
        switch (e.key.toUpperCase()) {
          
          case 'F8':
            // Navigate to the payment page
            window.location.href = '/inventory_in_out';
            break;
        }
      }
      else {
        switch (e.key.toUpperCase()) {
          case 'F3':
            // Navigate to the profile page
            window.location.href = '/profile';
            break;
          case 'F4':
            // Navigate to the my subscription page
            window.location.href = '/my_subscription';
            break;
          case 'F5':
            // Refresh the page
            location.reload();
            break;
        }
      }
    });
  });
</script>
<%- include('../partials/headercode.ejs') %>

    <body>

        <!-- Content -->


        <div class="authentication-wrapper authentication-cover">
            <div class="authentication-inner row m-0">

                <!-- Left Text -->
                <div class="d-none d-lg-flex col-lg-4 align-items-center justify-content-end p-5 pe-0"
                    style="background-color: #7F82FF;">
                    <div class="w-px-400">
                        <img src="/img/backgrounds/create-account-light.png" class="img-fluid" alt="multi-steps"
                            width="600" data-app-dark-img="illustrations/create-account-dark.png"
                            data-app-light-img="illustrations/create-account-light.html">
                    </div>
                </div>
                <!-- /Left Text -->

                <!--  Multi Steps Registration -->
                <div class="d-flex col-lg-8 align-items-center justify-content-center authentication-bg p-sm-5 p-3">

                    <div class="col-xl-6 mb-4">

                        <div class="content-header mb-3">
                            <h3 class="mb-2">Select Account Type</h3>
                            <p>Choose the account as per your lisence.</p>
                        </div>

                        <div class="row mb-3">
                            <div class="col-md mb-md-0 mb-5">
                                <div class="form-check custom-option custom-option-icon checked">
                                    <label class="form-check-label custom-option-content" for="retailerRadio">
                                        <span class="custom-option-body">
                                            <i class='bx bx-store-alt'></i>
                                            <span class="custom-option-title">Retailer</span>
                                        </span>
                                        <input name="customOptionRadioIcon" class="form-check-input" type="radio"
                                            value="" id="retailerRadio" checked="">
                                    </label>
                                </div>
                            </div>

                            <div class="col-md">
                                <div class="form-check custom-option custom-option-icon">
                                    <label class="form-check-label custom-option-content" for="distributorRadio">
                                        <span class="custom-option-body">
                                            <i class='bx bx-buildings' ></i>
                                            <span class="custom-option-title">Distributor</span>
                                            <span class="custom-option-desc">Comming Soon!</span>
                                        </span>
                                        <!-- <input name="customOptionRadioIcon" class="form-check-input" type="radio"
                                            value="" id="distributorRadio" disabled> -->
                                    </label>
                                </div>
                            </div>
                        </div>

                        <div class="d-flex justify-content-center">
                            <button id="nxtBtn" class="btn btn-primary">Next</button>
                        </div>
                    </div>

                </div>

            </div>

            <!-- / Content -->



            <%- include('../partials/footercode.ejs') %>

                <!-- Page JS -->
                <script src="/js/extended-ui-perfect-scrollbar.js"></script>

                <script>
                    $(document).ready(function () {
                        $("#nxtBtn").click(function () {
                            console.log('here');
                            if ($("#retailerRadio").is(":checked")) {
                                window.location.href = "/register?mobileNumber=<%=mobileNumber%>&accountType=retailer";
                            } else if ($("#distributorRadio").is(":checked")) {
                                window.location.href = "/register?mobileNumber=<%=mobileNumber%>&accountType=distributor";
                            }
                        });
                    });
                </script>


    </body>

    </html>